<UserControl x:Class="CarPaintingProcess.Views.SideBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="Auto" Width="Auto">
    <Grid Background="#F8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Paint Flow"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Expander Header="1. 하도 전착" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Button Content="세부 공정 A" 
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ProcessAView"
                            Margin="0,0,0,5"/>
                    <Button Content="세부 공정 B"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ProcessBView"/>
                </StackPanel>
            </Expander>

            <Expander Header="2. 건조 환경" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Button Content="건조 프로세스 A"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ProcessCView"
                            Margin="0,0,0,5"/>
                    <Button Content="건조 프로세스 B"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="ProcessDView"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- (2) 알림(Notice) 영역 -->
        <StackPanel Grid.Row="1" Margin="10">
            <Border Background="#3f1eac"
                    CornerRadius="4"
                    Padding="8"
                    Margin="0,0,0,8">
                <TextBlock Text="Notice" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <Border CornerRadius="4"
                    BorderBrush="#e2b400"
                    BorderThickness="4"
                    Background="#fff8e0"
                    Padding="8"
                    Margin="0,0,0,8">
                <TextBlock>
                    <Run Text="Important: 알람알람" />
                    <LineBreak/>
                    <Run Text="알람알람" FontSize="12"/>
                </TextBlock>
            </Border>

            <Border CornerRadius="4"
                    BorderBrush="#e2b400"
                    BorderThickness="4"
                    Background="#fff8e0"
                    Padding="8">
                <TextBlock>
                    <Run Text="Another Notice" />
                    <LineBreak/>
                    <Run Text="알람알람" FontSize="12"/>
                </TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
