<UserControl x:Class="CarPaintingProcess.Views.Controls.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarPaintingProcess.Views.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--다운로드 버튼-->
        <Button x:Name="DownloadButton" Content="다운로드" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120" Height="35" Margin="20,0,0,0" FontSize="16" Background="#260099" Foreground="White" Command="{Binding SaveExcelCommand}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <!--날짜선택-->
        <DatePicker Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,90,0" Width="200" SelectedDate="{Binding SelectedSearchDate}">
        </DatePicker>
        <Button x:Name="SearchButton" Content="조회" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0" FontSize="16" Width="60" Height="35" Background="#260099" Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!--표-->
        <Border Grid.Row="1" Background="#F5F0E5" Width="1038" Height="843" CornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <Label Content="● 하도 전착" FontSize="20" FontWeight="SemiBold" Margin="10"/>
                    <DataGrid x:Name="ElectroDepositionDataGrid" AutoGenerateColumns="True" MaxWidth="1000" ItemsSource="{Binding ElectroDepositonData}" IsReadOnly="True" >
                    </DataGrid>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Label Content="● 도장 공정" FontSize="20" FontWeight="SemiBold" Margin="10"/>
                    <DataGrid x:Name="PaintingDataGrid" AutoGenerateColumns="True" MaxHeight="250" MaxWidth="1000" ItemsSource="{Binding PaintingData}" IsReadOnly="True" >
                    </DataGrid>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <Label Content="● 건조 환경" FontSize="20" FontWeight="SemiBold" Margin="10"/>
                    <DataGrid x:Name="DryDataGrid" AutoGenerateColumns="True" MaxHeight="250" MaxWidth="1000" ItemsSource="{Binding DryData}" IsReadOnly="True">
                    </DataGrid>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
