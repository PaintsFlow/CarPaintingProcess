<UserControl x:Class="CarPaintingProcess.Views.Controls.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarPaintingProcess.Views.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/TableStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- 상단: 버튼/날짜 선택 영역 고정 높이 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- 나머지 영역(표들)은 가변 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 다운로드 버튼 -->
        <Button x:Name="DownloadButton"
                Content="다운로드"
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Width="120"
                Height="35"
                Margin="20,0,0,0"
                FontSize="16"
                Background="#260099"
                Foreground="White"
                Command="{Binding SaveExcelCommand}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- 날짜 선택 -->
        <DatePicker Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,90,0"
                    Width="200"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}">
        </DatePicker>

        <!-- 조회 버튼 -->
        <Button x:Name="SearchButton"
                Content="조회"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,0,0"
                FontSize="16"
                Width="70"
                Height="35"
                Background="#260099"
                Foreground="White"
                Command="{Binding LoadDataCommand}"
                 IsEnabled="{Binding IsSearchEnabled}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- 표 영역 -->
        <Border Grid.Row="1"
                Background="Transparent"
                CornerRadius="15"
                Margin="5">
            <!-- 전체 표들을 감싸는 Grid -->
            <Grid>
                <!-- 3개의 구역을 세 줄로 나누어 배치 -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- [1] 하도 전착 구역 -->
                <Grid Grid.Row="0" Margin="10">
                    <Grid.RowDefinitions>
                        <!-- Label은 자동 높이 -->
                        <RowDefinition Height="Auto"/>
                        <!-- DataGrid는 남는 공간을 전부 차지 -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 하도 전착 Label -->
                    <Label Content="● 하도 전착"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>

                    <!-- 하도 전착 DataGrid -->
                    <DataGrid x:Name="ElectroDepositionTable"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="False"
                              FrozenColumnCount="1"
                              ItemsSource="{Binding ElectroDepositionData}"
                              IsReadOnly="True"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Margin="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="수위(%)" Binding="{Binding waterlevel}" Width="1*"/>
                            <DataGridTextColumn Header="점도(cP)" Binding="{Binding viscosity}" Width="1*"/>
                            <DataGridTextColumn Header="pH" Binding="{Binding ph}" Width="1*"/>
                            <DataGridTextColumn Header="전류(V)" Binding="{Binding current}" Width="1*"/>
                            <DataGridTextColumn Header="전압(A)" Binding="{Binding voltage}" Width="1*"/>
                            <DataGridTextColumn Header="시간" Binding="{Binding TimeFormatted}" Width="1*"/>
                            <!--<DataGridTextColumn Header="온도(℃)" Binding="{Binding temperature}" Width="1*" />-->
                        </DataGrid.Columns>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <!-- 행 배경색 -->
                                <Setter Property="Foreground" Value="Black"/>
                                <!-- 텍스트 색상 -->
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Grid>

                <!-- [2] 도장 공정 구역 (두 개의 영역으로 나눔) -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <!-- 왼쪽 영역 -->
                        <ColumnDefinition Width="1*"/>
                        <!-- 오른쪽 영역 -->
                    </Grid.ColumnDefinitions>

                    <!-- 왼쪽: 도장 공정 -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="● 도장 공정"
               FontSize="20"
               FontWeight="SemiBold"
               Margin="0,0,0,10"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

                        <DataGrid x:Name="PaintingTable"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  VerticalScrollBarVisibility="Auto"
                  FrozenColumnCount="1"
                  ItemsSource="{Binding PaintingData}"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="페인트 유량(mL/min)" Binding="{Binding paintamount}" Width="1*"/>
                                <DataGridTextColumn Header="스프레이건 압력(bar)" Binding="{Binding pressure}" Width="1*"/>
                                <DataGridTextColumn Header="시간" Binding="{Binding TimeFormatted}" Width="1*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="● 건조 환경"
               FontSize="20"
               FontWeight="SemiBold"
               Margin="0,0,0,10"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

                        <DataGrid x:Name="DryTable"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  VerticalScrollBarVisibility="Auto"
                  FrozenColumnCount="1"
                  ItemsSource="{Binding DryData}"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="10,0,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="온도(℃)" Binding="{Binding temperature}" Width="1*" />
                                <DataGridTextColumn Header="습도(%)" Binding="{Binding humidity}" Width="1*"/>
                                <DataGridTextColumn Header="시간" Binding="{Binding TimeFormatted}" Width="1*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>

                <Grid Grid.Row="2" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="● 알람"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"/>

                    <DataGrid x:Name="AlarmTable"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="False"
                              VerticalScrollBarVisibility="Auto"
                              FrozenColumnCount="1"
                              ItemsSource="{Binding AlarmData}"
                              IsReadOnly="True"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Margin="0,0,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding alarmid}" Width="1*" />
                            <DataGridTextColumn Header="센서명" Binding="{Binding sensor}" Width="1*"/>
                            <DataGridTextColumn Header="현재 값" Binding="{Binding data}" Width="1*"/>
                            <DataGridTextColumn Header="경고 메시지" Binding="{Binding message}" Width="1*"/>
                            <DataGridTextColumn Header="시간" Binding="{Binding TimeFormatted}" Width="1*" />
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
