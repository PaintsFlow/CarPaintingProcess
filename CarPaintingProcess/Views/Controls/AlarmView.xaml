<UserControl x:Class="CarPaintingProcess.Views.Controls.AlarmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="White">

    <!-- 자원(Storyboard 등)을 여기서 정의 -->
    <UserControl.Resources>
        <!-- 알람 점멸 애니메이션 -->
        <Storyboard x:Key="FlashStoryboard" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                            From="Red" To="White" Duration="0:0:1" />
        </Storyboard>
    </UserControl.Resources>

    <!-- 세로 3분할을 위한 Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 1) 첫 번째 행: 하도 전착 -->
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="• 하도 전착"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="5,15,5,5"/>

            <ListView ItemsSource="{Binding HadoAlarms}"
                      Background="White"
                      Margin="0,5,0,10"
                      MaxHeight="250"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="5"
                                Padding="10"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                HorizontalAlignment="Stretch">

                            <!-- 로드 시 점멸 애니메이션 실행 -->
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource FlashStoryboard}" />
                                </EventTrigger>
                            </Border.Triggers>

                            <!-- 한 줄 레이아웃 (메시지, 값, 발생시각, 삭제버튼) -->
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 메시지/값 -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="경고: " FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="{Binding Message}" FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="    값: " FontSize="14" Foreground="Black" Margin="20,0,0,0"/>
                                    <TextBlock Text="{Binding Value}" FontSize="14" Foreground="black"/>
                                </StackPanel>

                                <!-- 발생시각 -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Timestamp, StringFormat='발생시각: {0:HH:mm:ss}'}"
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="5,0,10,0"/>

                                <!-- 삭제 버튼 -->
                                <Button Content="삭제"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.DeleteAlarmCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Width="60"
                                        Height="30"
                                        Background="#FF3B30"
                                        Foreground="White"
                                        BorderBrush="#FF3B30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- 2) 두 번째 행: 건조 환경 -->
        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock Text="• 건조 환경"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="5,15,5,5"/>

            <ListView ItemsSource="{Binding GunjyoAlarms}"
                      Background="White"
                      Margin="0,5,0,10"
                      MaxHeight="250"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="5"
                                Padding="10"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                HorizontalAlignment="Stretch">

                            <!-- 로드 시 점멸 애니메이션 실행 -->
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource FlashStoryboard}" />
                                </EventTrigger>
                            </Border.Triggers>

                            <!-- 한 줄 레이아웃 (메시지, 값, 발생시각, 삭제버튼) -->
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 메시지/값 -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="경고: " FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="{Binding Message}" FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="    값: " FontSize="14" Foreground="Black" Margin="20,0,0,0"/>
                                    <TextBlock Text="{Binding Value}" FontSize="14" Foreground="black"/>
                                </StackPanel>

                                <!-- 발생시각 -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Timestamp, StringFormat='발생시각: {0:HH:mm:ss}'}"
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="5,0,10,0"/>

                                <!-- 삭제 버튼 -->
                                <Button Content="삭제"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.DeleteAlarmCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Width="60"
                                        Height="30"
                                        Background="#FF3B30"
                                        Foreground="White"
                                        BorderBrush="#FF3B30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- 3) 세 번째 행: 도장 공정 (제어 버튼 고정) -->
        <Grid Grid.Row="2" Margin="20">
            <!-- '제목 + 버튼' 영역과 'ListView' 영역을 나누기 위해 2행 구조를 사용 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 제목/버튼 고정 -->
                <RowDefinition Height="*"/>
                <!-- 알람 목록 ListView -->
            </Grid.RowDefinitions>

            <!-- (1) '도장 공정' 텍스트와 '제어 하기' 버튼을 같은 행에 배치 -->
            <StackPanel Orientation="Horizontal"
                        
                        Grid.Row="0">
                <TextBlock Text="• 도장 공정"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="5,15,5,5"/>

                <Button Content="제어 하기"
        Command="{Binding ShowControlCommand}"
        Background="#4B0082"
        Foreground="White"
        Padding="8,5"
        Margin="10"
        HorizontalAlignment="Right" />

            </StackPanel>

            <!-- (2) 알람 ListView (스크롤로 확장) -->
            <ListView ItemsSource="{Binding DojangAlarms}"
                      Grid.Row="1"
                      Background="White"
                      Margin="0,5,0,10"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      HorizontalContentAlignment="Stretch"
                      MaxHeight="250">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="5"
                                Padding="10"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                HorizontalAlignment="Stretch">

                            <!-- 로드 시 점멸 애니메이션 실행 -->
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource FlashStoryboard}" />
                                </EventTrigger>
                            </Border.Triggers>

                            <!-- 한 줄 레이아웃 (메시지, 값, 발생시각, 삭제버튼) -->
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 메시지/값 -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="경고: " FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="{Binding Message}" FontSize="14" Foreground="Black"/>
                                    <TextBlock Text="    값: " FontSize="14" Foreground="Black" Margin="20,0,0,0"/>
                                    <TextBlock Text="{Binding Value}" FontSize="14" Foreground="black"/>
                                </StackPanel>

                                <!-- 발생시각 -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Timestamp, StringFormat='발생시각: {0:HH:mm:ss}'}"
                                           FontSize="12"
                                           Foreground="Black"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="5,0,10,0"/>

                                <!-- 삭제 버튼 -->
                                <Button Content="삭제"
                                        Grid.Column="2"
                                        Command="{Binding DataContext.DeleteAlarmCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                        CommandParameter="{Binding}"
                                        Width="60"
                                        Height="30"
                                        Background="#FF3B30"
                                        Foreground="White"
                                        BorderBrush="#FF3B30"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
